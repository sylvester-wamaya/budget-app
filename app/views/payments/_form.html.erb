<%=form_with model: current_user.payments.build, url: group_payments_path(@group), html: {class: 'form-control'} do |form|%>
   <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
